(a).

#include <stdio.h>

int main() {
    int year;

    // Prompt for the user to enter a year
    printf("Enter a year AD, for example, 1997: ");
    scanf("%d", &year);

    // Check if the year is a leap year
    if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0)) {
        printf("%d is a leap year.\n", year);
    } else {
        printf("%d is not a leap year.\n", year);
    }

    return 0;
}



(b).

#include <stdio.h>

int main() {
    int year;

    // Prompt for the user to enter a year with a different example
    printf("Enter a year AD, for example, 2005: ");
    scanf("%d", &year);

    // Check if the year is a leap year
    if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0)) {
        printf("%d is a leap year.\n", year);
    } else {
        printf("%d is not a leap year.\n", year);
    }

    return 0;
}
